    <key>CFBundleIdentifier</key>
    <string>com.yourname.GreenBean</string>

    <!-- Camera permission usage description -->
    <key>NSCameraUsageDescription</key>
    <string>GreenBean needs to use your camera to scan receipts.</string>

    <!-- Launch screen (modern iOS uses this key) -->
    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>

    <!-- App version number -->
    <key>CFBundleShortVersionString</key>
    <string>1.0</string>

    <!-- Build number -->
    <key>CFBundleVersion</key>
    <string>1</string>

    <!-- App display name (how the app appears under its icon) -->
    <key>CFBundleName</key>
    <string>GreenBean</string>

    <!-- Main app icon files (you can add more if needed) -->
    <key>CFBundleIcons</key>
    <dict>
        <key>CFBundlePrimaryIcon</key>
        <dict>
            <key>CFBundleIconFiles</key>
            <array>
                <string>AppIcon-60x60</string>
                <string>AppIcon-76x76</string>
                <string>AppIcon-120x120</string>
                <string>AppIcon-180x180</string>
